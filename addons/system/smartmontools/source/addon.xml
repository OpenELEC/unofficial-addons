<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.smartmontools"
       name="smartmontools"
       version="1.0.0"
       provider-name="Peter Smorada (smoradap@gmail.com)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>

  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service"
             library="default.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>S.M.A.R.T. disk monitoring tool with XBMC gui.</summary>
    <description>
S.M.A.R.T. disk monitoring tool with XBMC gui. This version is based on smartmontools v 6.2.
    </description>
    <platform>all</platform>
  </extension>
</addon>
