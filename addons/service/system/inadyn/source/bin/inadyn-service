. /etc/profile
oe_setup_addon service.system.inadyn

config="$ADDON_HOME/inadyn.conf"

options="-b"
if [ "$inadyn_S" == "inadyn.conf" ]
then
   if [ -f "$config" ] && [ -s "$config" ]
   then
      options="$options -F $config"
   else
      exit 0
   fi
else
   options="$options -S $inadyn_S -u $inadyn_u -p $inadyn_p -a $inadyn_a"
   if [ "$inadyn_s" == "true" ]
   then
      options="$options -s"
   fi
fi

inadyn $options

